<% if users.errors.any? %>
  <%= users.errors.count %>件のエラーが発生しました
  <ul>
    <% users.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>User info</h2>
  <table class="table">
    <tbody>
      <tr>
        <%= image_tag user.get_profile_image %>
      </tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
      <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fa-solid fa-users-gear"></i>
      <% end %>
  </div>
  <h2>New Book</h2>
      <%#仮コード%>
    <%= form_with model: book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>

    <h4>Opinion</h4>
      <%= f.text_area :body %><br>
    <%= f.submit "Create Book", class: "btn btn-success" %>
    <% end %>
