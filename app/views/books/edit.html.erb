<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
      <div class="form-group">
        <label for="inputName">Title</label><br>
        <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title"%>
      </div>
      <div class="form-group">
        <label for="user_introduction">Opinion</label><br>
        <%= f.text_area :body, autofocus: true, placeholder: "body" %>
      </div>
      <div class="form-group">
        <input type="Update Book" name="commit" value="Update User" class="btn btn-success" data-disable-with="Update book">
      </div>
      <%= link_to "Show", book_path %>
      /
      <%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>