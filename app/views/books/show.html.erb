<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <th>
                  <%= image_tag @user.get_profile_image %><br>
                  <%= link_to @user.name, user_path(@user) %>
                </th>
                <th>
                  <%= link_to @books.title, book_path(@books) %>
                </th>
                <th>
                  <%= @books.body %>
                </th>
                <% if @books.user_id == current_user.id %>
                <th>
                  <%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-sm btn-success" %>
                </th>
                <th>
                  <%= link_to "Destroy", book_path(@books.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %>
                </th>
                <% end %>
              </tr>
            </tbody>
          </table>
      </div>
  </div>
</div>